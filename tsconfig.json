{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@app/types/*": ["types/*"],
      "@app/assets/*": ["assets/*"],
      "@app/*": ["app/*"],
      "@app/components/*": ["components/*"],
      "@animations/*": ["modules/animations/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
}
